{
  "name": "@ebth/design-system",
  "version": "0.1.0",
  "description": "UI Component Library for EBTH",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "repository": "https://github.com/ebth/design-system",
  "author": "Brandon Patram <brandon.patram@ebth.com>",
  "license": "UNLICENSED",
  "scripts": {
    "storybook:watch": "start-storybook --port 52033",
    "storybook:build": "build-storybook -c .storybook -o .out",
    "dist:build": "rollup --config",
    "dist:watch": "rollup --config -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint:js": "prettier --check 'src/**/*.js'",
    "lint:flow": "flow check",
    "lint:scss": "sass-lint --config=.sass-lint.yml 'src/**/*.scss' --format=junit --output=reports/sass-lint.xml -v",
    "build": "concurrently \"npm:storybook:build\" \"npm:dist:build\"",
    "dev": "concurrently \"npm:storybook:watch\" \"npm:dist:watch\" \"npm:test:watch\"",
    "loki:build-reference": "loki update --port 52033",
    "loki:build-reference-static": "loki update --reactUri file:.out",
    "loki:build-current": "loki update --port 52033 --reference .loki/current",
    "loki:build-current-static": "loki update --reactUri file:.out --reference .loki/current",
    "test:visual": "reg-cli .loki/current .loki/reference .loki/difference -R .loki/visual.html -J .loki/visual.json -E -A",
    "loki:approve": "loki approve"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addon-options": "^5.1.9",
    "@storybook/react": "^5.1.10",
    "@storybook/theming": "^5.1.10",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "concurrently": "^4.1.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "flow-bin": "^0.104.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "jest-junit": "^7.0.0",
    "loki": "^0.17.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "reg-cli": "^0.14.1",
    "rollup": "^1.17.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-flow-entry": "^0.3.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "sass-lint": "^1.13.1",
    "sass-loader": "^7.1.0",
    "storybook-addon-jsx": "^7.1.5",
    "storybook-readme": "^5.0.5",
    "xml2js": "^0.4.19",
    "@tippy.js/react": "^2.2.2"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0",
    "@tippy.js/react": "^2.2.2"
  },
  "dependencies": {

    "classnames": "^2.2.6",
    "react-copy-to-clipboard": "^5.0.1"
  },
  "loki": {
    "configurations": {
      "chrome.ci.desktop": {
        "target": "chrome.app",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      },
      "chrome.local.desktop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      }
    }
  }
}
